<menu id="system-menu" label="Sistem">
    <item label="Ekran Çözünürlülüğü">
    <action name="Execute">
      <command>lxrandr</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
      <item label="Masaüstü Duvar Kağıdı">
    <action name="Execute">
      <command>gsetroot</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
   <item label="Openbox Yapılandırma Merkezi">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="KDE Kontrol Merkezi">
    <action name="Execute">
      <command>systemsettings</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Cups Yazıcı Yöneticisi">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify>
        <enabled>no</enabled>
        <icon>cups</icon>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Kısayollar" />
    <item label="Firefox">
    <action name="Execute"><command>firefox</command></action>
    </item>
    <item label="Dosya Yöneticisi">
    <action name="Execute"><command>pcmanfm</command></action>
  </item>
  <separator label="Uygulamalar" />
  <menu id="apps-accessories-menu"/>
  <menu id="apps-editors-menu"/>
  <menu id="apps-graphics-menu"/>
  <menu id="apps-net-menu"/>
  <menu id="apps-office-menu"/>
  <menu id="apps-multimedia-menu"/>
  <menu id="apps-term-menu"/>
  <menu id="apps-fileman-menu"/>
  <separator label="Sistem" />
  <menu id="system-menu"/>
  <separator />
  <item label="Çık">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
